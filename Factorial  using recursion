#include <stdio.h>
#include <stdlib.h>

int fact(int);

void main()
{
 int no,factorial;

  	printf("Enter a number to calculate it's factorial\n");
  	scanf("%d",&no);
  	factorial=fact(no);
    printf("Factorial of the num(%d) = %d\n",no,factorial);

}

int fact(int n)
{
    int i,f=1, a;
    if(n!=1)
    {
        f=n*fact(n-1);

    }else
    {
        return f;
    }

}
